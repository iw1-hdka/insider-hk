{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ project.url }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ project.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {% for issue in project.issues %}
            <div>{{ issue.title }}</div>
        {% endfor %}
    </div>

    <a href="{{ path('app_back_project_index') }}">back to list</a>

    <a href="{{ path('app_back_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('back/project/_delete_form.html.twig') }}
{% endblock %}
